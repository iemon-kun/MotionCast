{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "MotionCast",
  "version": "0.1.0",
  "identifier": "io.github.iemonkun.motioncast",
  "build": {
    "frontendDist": "../app/dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev --prefix app",
    "beforeBuildCommand": "npm run build --prefix app"
  },
  "app": {
    "windows": [
      {
        "title": "MotionCast",
        "width": 1280,
        "height": 840,
        "minWidth": 960,
        "minHeight": 640,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
